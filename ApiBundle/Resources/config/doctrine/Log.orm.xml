<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Geoks\ApiBundle\Entity\Log" table="logs">

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="created" type="datetime" column="created" nullable="true"/>

        <field name="type" type="string" column="type" nullable="true"/>
        <field name="description" type="string" column="description" nullable="true"/>
        <field name="context" type="array" column="context" nullable="false"/>
    </entity>

</doctrine-mapping>
