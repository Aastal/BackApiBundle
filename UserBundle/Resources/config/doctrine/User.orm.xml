<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Geoks\UserBundle\Entity\User">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>

        <!-- Datetime -->
        <field name="dateOfBirth" column="date_of_birth" type="datetime" nullable="true" />

        <!-- Text -->
        <field name="firstname" column="firstname" type="text" length="255" />
        <field name="lastname" column="lastname" type="text" length="255" />
        <field name="gender" column="gender" type="text" length="255" nullable="true" />
        <field name="facebookUid" column="facebook_uid" type="text" length="255" nullable="true" />
        <field name="facebookName" column="facebook_name" type="text" length="255" nullable="true" />
        <field name="facebookAccessToken" column="facebook_access_token" type="text" length="255" nullable="true" />
        <field name="phone" column="phone" type="integer" nullable="true" />
        <field name="address" column="address" type="text" length="255" nullable="true" />

    </mapped-superclass>

</doctrine-mapping>
