{% extends 'AdminBundle::simple.html.twig' %}

{% block title %}
    {{ parent() }} - Login
{% endblock %}

{% block body %}
    <h1>Login</h1>
    <hr>
    <form action="{{ path('geoks_admin_login_check') }}" method="post">
        <div class="form-group">
            <label class="control-label" for="email">
                {{ 'user.credentials.identity'|trans }} :
            </label>

            <input name="email" placeholder="{{ 'user.credentials.identity'|trans }}" class="control-animate" type="text">
        </div>
        <div class="form-group">
            <label class="control-label" for="password">
                {{ 'user.credentials.password'|trans }} :
            </label>

            <input name="password" placeholder="{{ 'user.credentials.password'|trans }}" class="control-animate" type="password">
        </div>
        <hr>
        <div class="form-group">
            <button type="submit" class="btn btn-animate btn-blue">
                {{ 'form.submit'|trans }}
            </button>
        </div>
    </form>
{% endblock %}
