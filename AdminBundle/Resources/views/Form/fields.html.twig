{% block form_row %}
    <div class="form-group">
        {% if attr.class is defined %}
            {% if 'checkbox-animate-right' in attr.class %}
                <label class="col-lg-8 col-md-8 col-sm-8 col-xs-9 control-label">{{ form_label(form) }}</label>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-3">
                    {{ form_widget(form) }}
                    {{ form_errors(form) }}
                </div>
            {% else %}
                {% if form.parent.vars.attr.class is defined and 'form-horizontal' in form.parent.vars.attr %}
                    <label class="col-lg-4 col-md-4 col-sm-2 col-xs-6 control-label">
                        {{ form_label(form) }}
                    </label>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6">
                        {{ form_widget(form) }}
                        <span class="highlight"></span>
                        <span class="bar"></span>
                        {{ form_errors(form) }}
                    </div>
                {% else %}
                    <label class="col-lg-6 col-md-6 col-sm-6 col-xs-6 control-label">
                        {{ form_label(form) }}
                    </label>
                    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6">
                        {{ form_widget(form) }}
                        <span class="highlight"></span>
                        <span class="bar"></span>
                        {{ form_errors(form) }}
                    </div>
                {% endif %}
            {% endif %}
        {% else %}
            {% if 'form_title' in attr %}
                <h3>{{ form_label(form) }}</h3>
                <hr class="form-hr">
            {% else %}
                <label class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">{{ form_label(form) }}</label>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6">
                    {{ form_widget(form) }}
                    {{ form_errors(form) }}
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock form_row %}

{% block form_label %}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif %}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}*
        {%- endif %}
        {% if label is empty -%}
            {% set label = name|humanize %}
        {%- endif -%}
        <label{% for attrname, attrvalue in label_attr %}
        {{ attrname }}="{{ attrvalue }}"
    {% endfor %}>
        {{ label|trans({}, translation_domain) }}
        </label>
    {%- endif %}
{% endblock form_label %}

{% block checkbox_widget %}
    <input type="checkbox" {{ block('widget_attributes') }}
            {% if value is defined %}
                value="{{ value }}"
            {% endif %}
            {% if checked %}
                checked="checked"
            {% endif %} />
{% endblock checkbox_widget %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <ul>
                {% for error in errors %}
                    <li>{{ error.cause.propertyPath }} : {{ error.message|trans }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block choice_widget_expanded %}
    {% spaceless %}
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <ul {{ block('widget_container_attributes') }}>
                {% for child in form %}
                    <li>
                        {{ form_widget(child, {'attr': {'class': attr.widget_class|default('') ~ ' checkbox-animate'}}) }}
                        <b>{{ child.vars.label|trans({}, translation_domain) }}</b>
                    </li>
                {% endfor %}
            </ul>
            {{ form_errors(form) }}
        </div>
    {% endspaceless %}
{% endblock choice_widget_expanded %}

{% block vich_file_widget %}
    {% spaceless %}
        <div class="vich-file">
            <div class="col-lg-12 col-md-12">
                {{ form_widget(form.file) }}
            </div>

            {% if form.delete is defined %}
                <div class="col-lg-12 col-md-12 form-delete">
                    {{ form_widget(form.delete, {'attr': {'class': 'checkbox-animate'} }) }} {{ form_label(form.delete) }}
                </div>
            {% endif %}

            {% if download_uri is defined and download_uri %}
                <div class="col-lg-12 col-md-12">
                    <a href="{{ download_uri }}">{{ 'download'|trans({}, 'VichUploaderBundle') }}</a>
                </div>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}