<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    {% stylesheets filter="scssphp" output='css/main.css'
    '%kernel.root_dir%/../web/vendors/bootstrap-sass/assets/stylesheets/_bootstrap.scss'
    '%kernel.root_dir%/../web/vendors/select2/src/scss/core.scss'
    '@GeoksAdminBundle/Resources/public/sass/style.scss' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% block stylesheets %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-9 col-sm-offset-4 col-md-10 col-md-offset-4 main">
            <div class="notification alert">
                {% include 'GeoksAdminBundle:Form:FlashBagHandler.html.twig' %}
            </div>

            {% block body %}{% endblock %}
        </div>
    </div>
</div>

{% javascripts output="js/app.js"
'%kernel.root_dir%/../web/vendors/jquery/dist/jquery.min.js'
'%kernel.root_dir%/../web/vendors/bootstrap-sass/assets/javascripts/bootstrap.min.js' %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}

{% block javascripts %}{% endblock %}
</body>
</html>
